<!DOCTYPE html>
<html lang="zh-CN">
<head>
<meta charset="UTF-8">
<title>打字游戏</title>
<style>
  body {
    font-family: 'Arial', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f7f7f7;
  }
  #game-container {
    width: 800px;
    text-align: center;
  }
  #word {
    font-size: 24px;
    margin: 20px;
  }
  #input-field {
    width: 300px;
    padding: 10px;
    font-size: 18px;
  }
</style>
</head>
<body>
<div id="game-container">
  <div id="word">这里会显示单词</div>
  <input type="text" id="input-field" placeholder="在这里输入单词..." />
  <p>打字速度: <span id="speed">0</span> 字/分钟</p>
</div>

<script>
  const words = ["键盘", "打字", "游戏", "速度", "练习"];
  let currentWordIndex = 0;
  let startTime = new Date().getTime();

  // 更新单词显示
  function updateWord() {
    document.getElementById('word').textContent = words[currentWordIndex];
  }

  // 检查输入的单词是否正确
  function checkInput() {
    const inputField = document.getElementById('input-field');
    if (inputField.value === words[currentWordIndex]) {
      currentWordIndex++;
      if (currentWordIndex >= words.length) {
        currentWordIndex = 0;
      }
      updateWord();
      inputField.value = '';
      calculateSpeed();
    }
  }

  // 计算打字速度
  function calculateSpeed() {
    const currentTime = new Date().getTime();
    const timeDiff = currentTime - startTime;
    const speed = Math.round((currentWordIndex / (timeDiff / 60000)) * 100) / 100;
    document.getElementById('speed').textContent = speed;
  }

  // 初始化游戏
  function initGame() {
    updateWord();
    document.getElementById('input-field').addEventListener('input', checkInput);
  }

  initGame();
</script>
</body>
</html>
